# Movie Explorer Platform Environment Variables
# Copy this file to .env and update the values

# Backend Configuration
DATABASE_URL=sqlite:///./movie_explorer.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# Frontend Configuration
FRONTEND_PORT=80
API_URL=http://localhost:8000

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_DB=movie_explorer
POSTGRES_USER=movie_user
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Application Settings
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:4200
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
PAGINATION_SIZE=12

# Email Configuration (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@movieexplorer.com

# Security
JWT_SECRET_KEY=another-secret-key-for-jwt
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
